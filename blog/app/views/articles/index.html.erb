<h1>博客列表</h1>
<%= link_to '写新博客', new_article_path %>
<table>
  <tr>
    <th>标题</th>
    <th>内容</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to '显示详情', article_path(article) %></td>
    </tr>
  <% end %>
</table>